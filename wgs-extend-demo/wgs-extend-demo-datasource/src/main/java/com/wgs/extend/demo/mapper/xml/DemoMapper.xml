<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wgs.extend.demo.mapper.DemoMapper">
	<resultMap id="baseResultMap" type="com.wgs.extend.demo.entity.pojo.Demo">
		<id property="id" column="id" jdbcType="BIGINT"/>
		<result property="name" column="name" jdbcType="VARCHAR"/>
	</resultMap>

	<sql id="baseColumns">
		id, name
	</sql>
	
	<!--<insert id="insert" parameterType="com.wgs.extend.demo.entity.pojo.Demo" useGeneratedKeys="true" keyColumn="id">-->
		<!--INSERT INTO t_demo (name)-->
		<!--VALUES (#{name,jdbcType=VARCHAR})-->
	<!--</insert>-->
	
	<select id="select" parameterType="java.lang.Integer" resultMap="baseResultMap">
		SELECT <include refid="baseColumns"/>
		FROM t_demo WHERE id = #{id,jdbcType=BIGINT}
	</select>
</mapper>
