<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">
	
	
	<!--fdfs服务器配置初始化-->
	<bean id="fdfsInit" class="com.eaju.extend.fastdfs.FdfsInit" init-method="init">
		<property name="antiStealToken" value="${eaju.fastdfs.http_anti_steal_token}" />
		<property name="charSet" value="${eaju.fastdfs.charset}" />
		<property name="connectTimeout" value="${eaju.fastdfs.connect_timeout_in_seconds}" />
		<property name="networkTimeout" value="${eaju.fastdfs.network_timeout_in_seconds}" />
		<property name="httpSecretKey" value="${eaju.fastdfs.http_secret_key}" />
		<property name="trackerHttpPort" value="${eaju.fastdfs.http_tracker_http_port}" />
		<property name="trackerServers" value="${eaju.fastdfs.tracker_servers}" />
	</bean>
	<!--client对象-->
	<bean id="trackerClient" class="org.csource.fastdfs.TrackerClient" depends-on="fdfsInit"/>
	<!--tracker连接工厂-->
	<bean id="trackerServerFactory" class="com.eaju.extend.fastdfs.TrackerServerFactory"  />
	<!--tracker连接池配置-->
	<bean id="genericObjectPoolConfig" class="org.apache.commons.pool2.impl.GenericObjectPoolConfig">
		<property name="minIdle" value="${eaju.object_pool.minIdle}" />
		<property name="maxIdle" value="${eaju.object_pool.maxIdle}" />
		<property name="maxTotal" value="${eaju.object_pool.maxTotal}" />
		<property name="testOnCreate" value="${eaju.object_pool.testOnCreate}" />
		<property name="testOnBorrow" value="${eaju.object_pool.testOnBorrow}" />
		<property name="testOnReturn" value="${eaju.object_pool.testOnReturn}" />
		<property name="testWhileIdle" value="${eaju.object_pool.testWhileIdle}" />
		<property name="blockWhenExhausted" value="${eaju.object_pool.blockWhenExhausted}"/>
		<property name="maxWaitMillis" value="${eaju.object_pool.maxWaitMillis}" />
		<property name="minEvictableIdleTimeMillis" value="${eaju.object_pool.minEvicTime}" />
		<property name="timeBetweenEvictionRunsMillis" value="${eaju.object_pool.timeBetEvicRun}" />
		<!-- jmx监控 生产环境不开启 -->
		<!--<property name="jmxEnabled" value="${eaju.object_pool.jmxEnabled}" />-->
	</bean>
	<!--tracker连接池-->
	<bean id="trackerServerPool" class="org.apache.commons.pool2.impl.GenericObjectPool">
		<constructor-arg ref="trackerServerFactory" />
		<constructor-arg ref="genericObjectPoolConfig" />
	</bean>
	
	<!--操作客户端-->
	<bean id="fastDFSClient" class="com.eaju.extend.fastdfs.FastDFSClient" />
</beans>
